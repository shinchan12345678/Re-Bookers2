<div class="container">
  <div class="row mt-5">
    <div class="col-lg-3">
      <%= render partial: 'users/user.html.erb', locals: {user: @user} %>
    </div>
    <div class="col-lg-8 offset-lg-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>