<div class="container">
  <div class="row mt-5">
    <div class="col-md-3">
      <%= render partial: 'users/user.html.erb', locals: {user: @book.user} %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <% if @book.user_id==current_user.id %>
              <th></th>
              <th></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td class="align-middle">
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td class="align-middle"><%= @book.body %></td>
            <% if @book.user_id==current_user.id %>
              <td class="align-middle">
                <%= link_to edit_book_path(@book.id) do %>
                  <span class="btn btn-success">Edit</span>
                <% end %>
              </td>
              <td class="align-middle">
                <%= link_to book_path(@book.id),method: :delete ,"data-confirm" => "本当に削除しますか？" do %>
                  <span class="btn btn-danger align-middle">Destroy</span>
                <% end %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <hr class="mt-0">
    </div>
  </div>
</div>