<div class="container">
  <div class="row mt-5">
    <div class="col-lg-6 mx-auto">
      <h2>User info</h2>
        <div class="mt-3">
          <% if @user.errors.any? %>
            <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          <% end %>
        </div>
        
        <%= form_with model: @user,url: user_path(@user.id),method: :patch do |f| %>
        <div class="form-group mt-2">
          <%= f.label :name %><br>
          <%= f.text_field :name,class: "form-control" %>
        </div>

        <div class="form-group mt-2">
          <%= f.label :profile_image ,"Image" %><br>
          <%= f.file_field :introduction %>
        </div>

        <div class="form-group mt-2">
          <%= f.label :introduction %><br>
          <%= f.text_area :introduction,class: "form-control" %>
        </div>

        <div class="action">
          <%= f.submit "Update User" ,class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>